@using Libaray.BusinessObjects
@model Books
@{
    ViewBag.Title = "Book";
    Layout = @"~\Views\Shared\_Layout.cshtml";
}

<h2>Create / Change Books</h2>
<hr />
@using (Html.BeginForm("Book", "Library", FormMethod.Post))
{
<div class="col-md-2">
    <div class="form-group">
        @Html.LabelFor(m => m.Code, new { @class = "form-label" })
        @Html.TextBoxFor(m => m.Code, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Title, new { @class = "form-label" })
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Author, new { @class = "form-label" })
        @Html.TextBoxFor(m => m.Author, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Publisher, new { @class = "form-label" })
        @Html.TextBoxFor(m => m.Publisher, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <button id="btnSave" class="btn" value="btnSave" >Save Books</button>
    </div>
</div>

}

